{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "../..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "shared-types": ["../../packages/shared-types"]
    }
  },
  "include": ["src", "../../packages/shared-types"],
  "exclude": ["node_modules", "dist"]
}
