{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "start": "node dist/apps/backend/src/index.js",
    "db:dev:seed": "ts-node db-scripts/seed-dev.ts",
    "db:dev:schema": "sqlite3 ./dev-db.sqlite < db-scripts/schema.sql",
    "db:dev:clear": "read -p 'Are you sure you want to clear all data from dev-db.sqlite? [y/N] ' ans && [ \"$ans\" = y ] && ts-node db-scripts/clear-dev.ts || echo 'Cancelled.'"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
